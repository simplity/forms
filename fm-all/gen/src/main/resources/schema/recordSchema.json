{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for record. file type *.rec.json",
    "required": [
        "name",
        "fields"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "nameInDb": {
            "type": "string"
        },
        "customValidation": {
            "type": "string"
        },
        "useTimestampCheck": {
            "type": "boolean"
        },
        "operations": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "get",
                    "create",
                    "update",
                    "filter",
                    "delete"
                ]
            }
        },
        "fields": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "dataType"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "dataType": {
                        "type": "string",
                        "enum": [
                            "accountStatus",
                            "bool",
                            "code",
                            "country",
                            "date",
                            "desc",
                            "email",
                            "flexibleId",
                            "govtCode",
                            "id",
                            "ip",
                            "json",
                            "loginId",
                            "money",
                            "name",
                            "integer",
                            "phone",
                            "pin",
                            "state",
                            "tenantKey",
                            "text",
                            "timestamp",
                            "uniqueId",
                            "url",
                            "userType",
                            "gender",
                            "income",
                            "marks",
                            "marksOrAb",
                            "valuationType",
                            "internalMarks"
                        ]
                    },
                    "defaultValue": {
                        "type": "string"
                    },
                    "dbColumnName": {
                        "type": "string"
                    },
                    "fieldType": {
                        "type": "string",
                        "enum": [
                            "generatedPrimaryKey",
                            "primaryKey",
                            "tenantKey",
                            "createdBy",
                            "createdAt",
                            "modifiedBy",
                            "modifiedAt",
                            "requiredData",
                            "optionalData"
                        ]
                    },
                    "label": {
                        "type": "string"
                    },
                    "icon": {
                        "type": "string"
                    },
                    "fieldPrefix": {
                        "type": "string"
                    },
                    "fieldSuffix": {
                        "type": "string"
                    },
                    "hint": {
                        "type": "string"
                    },
                    "placeHolder": {
                        "type": "string"
                    },
                    "listName": {
                        "type": "string"
                    },
                    "listKey": {
                        "type": "string"
                    },
                    "errorId":{
                        "type": "string"
                    },
                    "renderInList":{
                        "type": "boolean"
                    },
                    "renderInSave":{
                        "type": "boolean"
                    }
                },
                "additionalProperties": false
            }
        },
        "fromToPairs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "field1",
                    "field2"
                ],
                "properties": {
                    "field1": {
                        "type": "string"
                    },
                    "field2": {
                        "type": "string"
                    },
                    "equalOk": {
                        "type": "boolean"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "inclusivePairs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "field1",
                    "field2"
                ],
                "properties": {
                    "field1": {
                        "type": "string"
                    },
                    "field2": {
                        "type": "string"
                    },
                    "value1": {
                        "type": "string"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "exclusivePairs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "field1",
                    "field2"
                ],
                "properties": {
                    "field1": {
                        "type": "string"
                    },
                    "field2": {
                        "type": "string"
                    },
                    "isRequired": {
                        "type": "boolean"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        
        "generateSavePage":{
            "description": "generate a save-page for this record",
            "type": "object",
            "additionalProperties": false,
            "properties":{
                "hideFields":{
                    "description": "fields to be hidden, in addition to the standard fields that are hidden by default.",
                    "type": "array",
                    "items":{ "type": "string" }
                }
            }
        },
        "generateUpdatePage":{
            "description": "generate an edit/update page is to be generated",
            "type": "object",
            "additionalProperties": false,
            "properties":{
                "hideFields":{
                    "description": "fields to be hidden, in addition to the standard fields that are hidden by default.",
                    "type": "array",
                    "items":{ "type": "string" }
                }
            }
        },
        "generateCreatePage":{
            "description": "generate new/create page is to be generated",
            "type": "object",
            "additionalProperties": false,
            "properties":{
                "hideFields":{
                    "description": "fields to be hidden, in addition to the standard fields that are hidden by default.",
                    "type": "array",
                    "items":{ "type": "string" }
                }
            }
        },
        "generateViewPage":{
            "description": "generate view-page for this record",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "menuForNew":{
                    "description": "menu/page to go to when new button is clicked. defaults to save/update of this record",
                    "type": "string"
                },
                "menuForEdit":{
                    "description": "menu to be used on click of edit button. defaults to save/edit of this record",
                    "type": "string"
                }
            }
        },
        "generateListPage":{
            "description": "generate list-page for this record",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "onNewClick":{
                    "description": "menu/page to go to when New button is clicked in the view page. defaults to save/create of this record",
                    "type": "string"
                }
            }
        },
        "generateSelectPage":{
            "description": "generate select-page for this record",
            "type": "object",
            "additionalProperties": false,
            "properties": {
            "selectField":{
                "description": "name of the boolean-valud field that determines whether this row is selected or not. A local field is added by default",
                "type": "string"
            }
        },
        "tabs": {
            "type": "array",
            "items": {
                "type": "object",
                "required":["name", "label", "fields"],
                "additionalProperties": false,
                "properties":{
                    "name": {"type": "string"},
                    "label": {"type": "string"},
                    "fields": {
                        "type": "array",
                        "items":{"type": "string"}
                    }
                }
            }
        }
    }
}
