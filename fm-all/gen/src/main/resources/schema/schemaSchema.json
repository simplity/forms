{
	"$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for data base schema.json",
    "required": [
        "name",
        "fields"
    ],
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string"
        },
        "nameInDb": {
            "type": "string"
        },
        "customValidation": {
            "type": "string"
        },
        "useTimestampCheck": {
            "type": "boolean"
        },
        "fields": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "dataType",
                    "dbColumnName",
                    "columnType"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "dataType": {
                        "type": "string"
                    },
                    "defaultValue": {
                        "type": "string"
                    },
                    "dbColumnName": {
                        "type": "string"
                    },
                    "columnType": {
                        "type": "string",
                        "enum": [
                            "GeneratedPrimaryKey",
                            "PrimaryKey",
                            "TenantKey",
                            "CreatedBy",
                            "CreatedAt",
                            "ModifiedBy",
                            "ModifiedAt",
                            "RequiredData",
                            "OptionalData"
                        ]
                    },
                    "listName": {
                        "type": "string"
                    },
                    "listKey": {
                        "type": "string"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "fromToPairs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "field1",
                    "field2"
                ],
                "properties": {
                    "field1": {
                        "type": "string"
                    },
                    "field2": {
                        "type": "string"
                    },
                    "equalOk": {
                        "type": "boolean"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "inclusivePairs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "field1",
                    "field2"
                ],
                "properties": {
                    "field1": {
                        "type": "string"
                    },
                    "field2": {
                        "type": "string"
                    },
                    "value1": {
                        "type": "string"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "exclusivePairs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "field1",
                    "field2"
                ],
                "properties": {
                    "field1": {
                        "type": "string"
                    },
                    "field2": {
                        "type": "string"
                    },
                    "isRequired": {
                        "type": "boolean"
                    },
                    "errorId": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        }
    }
}