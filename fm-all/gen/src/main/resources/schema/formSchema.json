{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Schema for form. file type *.frm.json",
    "required": [
        "name",
        "recordName"
    ],
    "properties": {
        "description": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "recordName": {
            "type": "string"
        },
        "operations": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "get",
                    "create",
                    "update",
                    "filter",
                    "bulk",
                    "delete"
                ]
            }
        },
        "controls": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "controlType"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "controlType": {
                        "type": "string",
                        "enum": [
                            "hidden",
                            "input",
                            "dropDown",
                            "checkBox",
                            "radio",
                            "output",
                            "password"
                        ]
                    },
                    "label": {
                        "type": "string"
                    },
                    "placeHolder": {
                        "type": "string"
                    },
                    "width": {
                        "type": "integer"
                    },
                    "colunUnits": {
                        "type": "integer"
                    }
                },
                "additionalProperties": false
            }
        },
        "linkedForms": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "formName",
                    "isTabular"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "formName": {
                        "type": "string"
                    },
                    "isEditable": {
                        "type": "boolean"
                    },
                    "isTabular": {
                        "type": "boolean"
                    },
                    "minRows": {
                        "type": "integer"
                    },
                    "maxRows": {
                        "type": "integer"
                    },
                    "errorId": {
                        "type": "string"
                    },
                    "parentLinkFields": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "childLinkFields": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}